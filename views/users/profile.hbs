<div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
  <div class="row">
  
    <div class="col-md-4">
      <img class="img-fluid center-block" style="border radius:50%" alt="user-avatar" src="{{userData.image}}">
    </div>
    <div class="col-md-8">
      <ul class="list-unstyled">
        <li class="mt-3"><h3>{{userData.name}}</h3></li>
        <li class="mt-3"><h5>{{userData.email}}</h5></li>
        <br>
        <br>
        <li class="mt-3">
          <h5><strong>{{commentCount}}</strong> 已評論餐廳</h5>
        </li>
        <li class="mt-3">
          <h5><strong>{{favoritedRestaurantCount}}</strong> 收藏的餐廳</h5>
        </li>
        <li class="mt-3">
          <h5><strong>{{followingCount}}</strong> followings(追蹤者)</h5>
        </li>
        <li class="mt-3">
          <h5><strong>{{followerCount}}</strong> followers(追蹤者)</h5>
        </li>
        {{#ifCond userData.id currentUserId}}
          <li class="mt-5"><a class="btn btn-outline-primary" href="/users/{{user.id}}/edit">edit</a></li>
        {{/ifCond}}
      </ul>
    </div>
  </div>
</div>


<div class="row">
{{!-- 追蹤者 --}}
  <div class="col-md-4">
    {{!-- followings --}}
    <div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
      <div class="card">
        <div class="card-header">
          {{#if followingCount}}
            {{followingCount}}
          {{else}}
            0
          {{/if}}followings(追蹤者)
        </div>
        <div class="card-body">
          <div class="row">
            {{#each userData.Followings}}
              <div class="col-sm-4 mb-2">
                <div class="card" style="max-width: 360px;">
                  <a href="/users/{{this.id}}">
                    <img src="{{this.image}}" class="card-img-top" alt="user-avatar">
                    <div class="card-body">
                      <h5 class="card-title">{{this.name}}</h5>
                    </div>
                  </a>
                </div>
              </div>
            {{/each}}
          </div>
          
        </div>
      </div>
    
    </div>
    {{!-- followers --}}

    <div class="container rounded mb-2 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
      <div class="card">
        <div class="card-header">
          {{#if followerCount}}
            {{followerCount}}
          {{else}}
            0
          {{/if}}followers(追蹤者)
        </div>

        <div class="card-body">
          <div class="row">
            {{#each userData.Followers}}
            <div class="col-sm-4 mb-2">
              <div class="card" style="max-width: 360px;">
                <a href="/users/{{this.id}}">
                  <img src="{{this.image}}" class="card-img-top" alt="user-avatar">
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                  </div>
                </a>
              </div>
            </div>
            {{/each}}
          </div>
        </div>

      </div>
    </div>
  </div>

{{!-- 餐廳 --}}
  <div class="col-md-8">
{{!-- 已評論過的餐廳 --}}
    <div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
      <div class="card">
        <div class="card-header">
          {{#if commentCount}}
            {{commentCount}}
          {{else}}
            0
          {{/if}}已評論餐廳
        </div>
        <div class="card-body">
    
          <div class="row">
            {{#each uniqueCommentRestaurant}}
            <div class="col-sm-4 mb-2">
              <div class="card" style="max-width: 360px;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <a href="/restaurants/{{this.id}}">
                      <img src="{{this.image}}" class="img-fluid rounded-start" alt="rest-image">
                    </a>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <a href="/restaurants/{{this.id}}">
                        <h5 class="card-title">{{this.name}}</h5>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
  
        </div>
      </div>
    </div>

{{!-- 收藏的餐廳 --}}
    <div class="container rounded mb-5 p-3" style="box-shadow: 1px 1px 5px 2px #eee">
      <div class="card">
        <div class="card-header">
          {{#if favoritedRestaurantCount}}
            {{favoritedRestaurantCount}}
          {{else}}
            0
          {{/if}}已收藏的餐廳
        </div>
        <div class="card-body">
      
          <div class="row">
            {{#each userData.FavoritedRestaurants}}
            <div class="col-sm-4 mb-2">
              <div class="card" style="max-width: 360px;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <a href="/restaurants/{{this.id}}">
                      <img src="{{this.image}}" class="img-fluid rounded-start" alt="rest-image">
                    </a>
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <a href="/restaurants/{{this.id}}">
                        <h5 class="card-title">{{this.name}}</h5>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
      
        </div>
      </div>
    </div>
{{!--  --}}
  </div>
</div>

  